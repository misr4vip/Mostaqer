@model Mostaqer.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}

<main aria-labelledby="title">
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Create a new account.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control mt-1",@placeholder = "First name" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control mt-1", @placeholder = "Last name" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.phoneNumber, new { @class = "form-control mt-1 ", @placeholder = "Phone" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control mt-1", @placeholder = "Email" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.DropDownList("userType", null, htmlAttributes: new { @class = "form-control mt-2" })
                        @Html.ValidationMessageFor(model => model.userType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control mt-1", @placeholder = "Password" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control mt-1", @placeholder = "Confirm Password" })
                    </div>
                </div>
                <div class="row ">
                    <div class=" col-md-12 mt-2">
                        <input type="submit" value="Create Account" class="btn btn-outline-primary" />
                        @Html.ActionLink("Log in", "login", "Account", new { @class = "btn btn-outline-primary" })
                    </div>
                </div>
            }

        </div>
        <div class="col-md-8 text-center">
            <img width="600" height="522" src="~/Images/loginbg.jpg" />
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
